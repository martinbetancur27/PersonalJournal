@model Models.ViewModels.EditNoteViewModel

@{
    ViewData["Title"] = @Model?.Title;
}

<div class="container">
    <h2>Edit Note</h2>
</div>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">

        <input type="hidden" asp-for="IdNote" />
        <span asp-validation-for="Title" class="text-danger"></span>

        <div class="form-floating mb-3">
            <input asp-for="Title" id= "titleNote" class="form-control text fw-bolder mb-3 text-secondary" aria-describedby="inputGroup-sizing-lg"/>
            <label for="titleNote">Write your title</label>
        </div>

        <span asp-validation-for="Message" class="text-danger"></span>
        <div class="form-floating form-outline mb-2">
            <textarea asp-for="Message" maxlength="15000" id="textAreaNote" class="form-control" rows="18" style="height: 32rem;"></textarea>
            <label for="textAreaNote">Write your note</label>  
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-warning mb-1 btn-lg">
                Edit
            </button>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-outline-secundary btn-lg" asp-controller="Note" asp-action="ShowNote" asp-route-id="@Model?.IdNote">Maybe, Not!</a>
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}