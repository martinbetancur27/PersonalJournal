@model Models.ViewModels.EditJournalViewModels


@{
    ViewData["Title"] = @Model?.Title;
}


<div class="container">
    <h2>Edit Journal</h2>
</div>

<form method="post">
    <div class="container">
        <input type="hidden" asp-for="IdJournal" />
        
        <span asp-validation-for="Title" class="text-danger"></span>
        <div class="form-floating mb-3">
        <input asp-for="Title" id= "titleJournal" class="form-control text fw-bolder mb-3 text-secondary" aria-describedby="inputGroup-sizing-lg"/>
            <label for="titleJournal">Write your title</label>
        </div>


        <div class="form-floating">
            <textarea asp-for="Message" maxlength="1200" class="form-control" id="floatingTextarea2" style="height: 14rem;"></textarea>
            <label for="floatingTextarea2">Write Description</label>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-warning mb-1 btn-lg">
            Edit
            </button>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a asp-controller="Journal" asp-action="Index" class="btn btn-outline-secundary btn-lg">Maybe, Not!</a>
        </div>
    </div>
</form>