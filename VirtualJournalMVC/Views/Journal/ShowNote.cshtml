            <a class="btn btn-outline-secundary btn-sm">Back</a>
        </div>

    </div>
</form>


<div class="container border border-light border-3 rounded">
    <h2>Comments</h2>
    
    <form method="post">
        <div class="form-floating">
            <textarea maxlength="800" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px;"></textarea>
