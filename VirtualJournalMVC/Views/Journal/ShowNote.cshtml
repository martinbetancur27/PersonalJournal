@using Models
@model Note


@{
}


<div class="container">
    <h2>Note</h2>
</div>

    <div class="container">

        <div class="container border border-2 rounded">
        <h3 id= "titleNoteStatic" class="fw-bolder mb-3 text-secondary">@Model?.Title</h3>
        </div>


        <div class="form-floating form-outline mb-2">
        <textarea asp-for="Message" readonly id="textAreaNoteStatic" class="form-control" rows="18" style="height: 500px; background-color: white;"></textarea>
        <label for="textAreaNote">Created: @Model?.CreateDate</label>
        </div>

        <div class="d-grid gap-2">
        <button type="submit" class="btn btn-light mb-1 btn-lg" asp-controller="Journal" asp-action="EditNote">
        Edit
        </button>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-outline-danger btn-sm">Delete</a>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-outline-secundary btn-sm">Back</a>
        </div>

    </div>



<div class="container border border-light border-3 rounded">
    <h2>Comments</h2>
    
    <form method="post">
        <div class="form-floating">
            <textarea maxlength="800" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px;"></textarea>
            <label for="floatingTextarea2">Write Comment</label>
        </div>
        
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary mb-1 btn-sm">Send</button>
        </div>
    </form>              


    <div class="container">
       
            <div class="form-floating">
            <textarea readonly class="form-control" id="floatingTextarea3" style="height: 100px; background-color: #FAFAFD;"></textarea>
            <label for="floatingTextarea3">Created: </label>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-outline-danger btn-sm">Delete</a>
            </div>
        

        

    </div>
</div>