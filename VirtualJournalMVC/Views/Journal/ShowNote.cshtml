<div class="container">
    <h2>Note</h2>
</div>

<form method="post">
    <div class="container">

        <div class="container border border-2 rounded">
        <h3 id= "titleNoteStatic" class="fw-bolder mb-3 text-secondary">Text - Example</h3>
        </div>


        <div class="form-floating form-outline mb-2">
        <textarea readonly id="textAreaNoteStatic" class="form-control" rows="18" style="height: 500px; background-color: white;">Text - Example</textarea>
        <label for="textAreaNote">Created: Date</label>
        </div>

        <div class="d-grid gap-2">
        <button type="submit" class="btn btn-light mb-1 btn-lg">
        Edit
        </button>
        </div>

