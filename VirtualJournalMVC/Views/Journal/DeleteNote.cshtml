@using Models
@model Note

@{
}


<div class="container">
    <h2>Delete Note</h2>
</div>

<form method="post">

    <div class="container">

        <div class="container border border-2 rounded">
        <h3 asp-for="Title" id= "titleNoteStatic" class="fw-bolder mb-3 text-secondary"></h3>
        </div>

        <div class="form-floating form-outline mb-2">
            <textarea asp-for="Message" readonly id="textAreaNoteStatic" class="form-control" rows="18" style="height: 500px; background-color: white;"></textarea>
            <label for="textAreaNote">Created: @Model?.CreateDate</label>
        </div>

        <div class="d-grid gap-2">
        <button type="submit" class="btn btn-danger mb-1 btn-lg" asp-route-id="@Model?.IdNote">
        Delete
        </button>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a asp-controller="Journal" asp-action="Notes" class="btn btn-outline-secundary btn-lg">Maybe, Not!</a>
        </div>

    </div>
</form>